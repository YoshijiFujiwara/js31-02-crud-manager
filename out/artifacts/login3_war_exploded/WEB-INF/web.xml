<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>servlets.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductSearchServlet</servlet-name>
        <servlet-class>servlets.ProductSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductSearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManagementIndexServlet</servlet-name>
        <servlet-class>servlets.ManagementIndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagementIndexServlet</servlet-name>
        <url-pattern>/management</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductsCreateServlet</servlet-name>
        <servlet-class>servlets.ProductsCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductsCreateServlet</servlet-name>
        <url-pattern>/management/products/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductsStoreServlet</servlet-name>
        <servlet-class>servlets.ProductsStoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductsStoreServlet</servlet-name>
        <url-pattern>/management/products/store</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoriesCreateServlet</servlet-name>
        <servlet-class>servlets.CategoriesCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoriesCreateServlet</servlet-name>
        <url-pattern>/management/categories/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoriesStoreServlet</servlet-name>
        <servlet-class>servlets.CategoriesStoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoriesStoreServlet</servlet-name>
        <url-pattern>/management/categories/store</url-pattern>
    </servlet-mapping>
</web-app>